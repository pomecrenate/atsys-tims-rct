@charset "UTF-8";

.admin-sidebar {
    width: 220px;
    background-color: #f5f7fa; /* 연한 회색 배경 */
    color: #333;
    min-height: 100vh;
    padding: 20px 15px;
    box-sizing: border-box;
    border-right: 1px solid #dcdfe3;
    font-family: 'Noto Sans KR', sans-serif;
}

.admin-sidebar h3 {
    font-size: 18px;
    margin-bottom: 20px;
    border-bottom: 1px solid #dcdfe3;
    padding-bottom: 10px;
    color: #2c3e50;
}

.admin-sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.admin-sidebar li {
    margin-bottom: 8px;
}

.admin-sidebar a {
    color: #2c3e50;
    text-decoration: none;
    display: block;
    padding: 8px 12px;
    border-radius: 6px;
    transition: background-color 0.2s;
}

.admin-sidebar a:hover {
    background-color: #e6ecf1;
}

.mid-menu > a::after {
    content: '▾';
    float: right;
    transition: transform 0.3s;
    font-size: 12px;
    color: #7f8c8d;
}

.mid-menu.open > a::after {
    transform: rotate(-180deg);
}

.sm-menu {
    display: none;
    padding-left: 10px;
    margin-top: 5px;
}

.sm-menu li a {
    background-color: #f0f3f7;
    padding-left: 20px;
}
 
